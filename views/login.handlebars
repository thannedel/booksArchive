<section id="add" class="container">
    <form class="form-wrap">
        <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i> Login</h1>
        <form action="/users/login" method="POST">
            <div class="input-group">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" class="input-box" placeholder="Enter Email" />
            </div>
            <div class="input-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" class="input-box" placeholder="Enter Password" />
            </div>
            <button type="submit" class="btn btn-reverse">Login</button>
        </form>
</section>