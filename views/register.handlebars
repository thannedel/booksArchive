<section id="add" class="container">
    <form class="form-wrap">

        <h1 class="text-center mb-3">
            <i class="fas fa-user-plus"></i> Register
        </h1>

        <form action="/users/register" method="POST">
            <div class="input-group">
                <label for="name">Name</label>
                <input type="name" id="name" name="name" class="input-box" placeholder="Enter Name" value="{{name}}" />
            </div>

            <div class="input-group">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" class="input-box" placeholder="Enter Email"
                    value="{{email}}" />
            </div>
            <div class="input-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" class="input-box" placeholder="Create Password"
                    value="{{password}}" />
            </div>
            <div class="input-group">
                <label for="password2">Confirm Password</label>
                <input type="password" id="password2" name="password2" class="input-box" placeholder="Confirm Password"
                    value="{{password2}}" />
            </div>
            <button type="submit" class="btn btn-reverse">
                Register
            </button>
        </form>
        <p class="lead mt-4">Have An Account? <a href="/users/login">Login</a></p>

        </div>
        <section>